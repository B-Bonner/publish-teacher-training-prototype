  <div class="app-notice-summary" role="alert" aria-labelledby="notice-summary-heading" tabindex="-1" data-module="govuk-error-summary">
    <h3 class="app-notice-summary__title" id="notice-summary-heading">{{ params.titleHtml | safe if params.titleHtml else params.titleText }}</h3>

    <ul class="govuk-list">
    {% for item in params.actionsList %}
      <li>
        {% if item.href %}
          <a class="app-notice-summary__link" href="{{ item.href }}"{% for attribute, value in item.attributes %} {{attribute}}="{{value}}"{% endfor %}>{{ item.html | safe if item.html else item.text }}</a>
        {% else %}
          {{ item.html | safe if item.html else item.text }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  </div>
